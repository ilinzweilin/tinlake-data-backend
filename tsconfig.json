{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "declarationDir": "./dist",
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "src/services/tinlake/addresses_tinlake.json"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ]
}